{% extends '../layout.njk' %}

{% block head %}
    <title>Teachers - My class</title>
{% endblock head %}

{% block content %}
    <div class="card table-container">
        <a href="teachers/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url('{{ teacher.avatar_url }}')"></span>
                        {{ teacher.name }}
                    </td>
                    <td>{{ teacher.services }}</td>
                    <td><a href="teachers/{{ teacher.id }}">ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}