{% extends '../layout.njk' %}

{% block head %}
    <title>Students - My class</title>
{% endblock head %}

{% block content %}
    <div class="card table-container">
        <a href="students/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Ano Escolar</th>
                    <th>Email</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td>
                        <span style="background-image: url('{{ student.avatar_url }}')"></span>
                        {{ student.name }}
                    </td>
                    <td>{{ student.degree }}</td>
                    <td>{{ student.email }}</td>
                    <td><a href="students/{{ student.id }}">ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}