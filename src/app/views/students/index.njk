{% extends '../layout.njk' %}

{% block head %}
    <title>Students - My class</title>
{% endblock head %}

{% block content %}
    <div class="card table-container">

        <div class="header">
            <a id="btn" class="button" href="students/create">Novo</a>
            <form action="/students" method="GET">
                <input 
                    type="text" 
                    name="filter"
                    placeholder="Nome ou email"
                    value={{filter}}
                >
                <button id="btn" type="submit">Filtrar</button>
            </form>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Ano Escolar</th>
                    <th>Email</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td>
                        <span style="background-image: url('{{ student.avatar_url }}')"></span>
                        {{ student.name }}
                    </td>
                    <td>{{ student.degree }}</td>
                    <td>{{ student.email }}</td>
                    <td><a href="students/{{ student.id }}">ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>

    </div>
{% endblock content %}