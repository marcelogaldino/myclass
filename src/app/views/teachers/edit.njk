{% extends '../layout.njk' %}

{% block head %}
    <title>Create - My class</title>
{% endblock head %}

{% block content %}

    <div class="card">

        <section class="card-image" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
        </section>

        <section class="card-details">
            <h3>Editar</h3>
            <form action="/teachers?_method=PUT" method="POST">
            

                {% include 'teachers/fields.njk' %}
        <div class="my-button">

                <input 
                    type="hidden" 
                    name="id" 
                    value="{{ teacher.id }}"
                >
                <button id="save-button" type="submit">Salvar</button>
            </form>
        
            <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
                <input 
                    type="hidden" 
                    name="id" 
                    value="{{ teacher.id }}"
                >

                <button type="submit">Deletar</button>


            </form>
        </div>

        </section>
      
    </div>

    {% include '../confirm.njk' %}

{% endblock content %}