<div class="item">
    <div>Imagem</div>
    <div>
        <input 
            type="text"
            placeholder="http://"
            name="avatar_url"
            value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text" 
            name="name"
            placeholder="Nome"
            value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Idade</div>
    <div>
        <input 
            type="date" 
            name="birth"
            value="{{ teacher.birth }}"
        >
    </div>    
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="degree">
            <option 
                value="medio" 
                {% if teacher.degree == 'medio' %}
                    selected
                {% endif %}
                >Ensino Médio Completo
            </option>
            <option 
                value="superior"
                {% if teacher.degree == 'superior' %}
                    selected
                {% endif %}
                >Ensino Superior Completo
            </option>
            <option 
                value="mestrado"
                {% if teacher.degree == 'mestrado' %}
                    selected
                {% endif %}
                >Mestrado
            </option>
            <option 
                value="doutorado"
                {% if teacher.degree == 'doutorado' %}
                    selected
                {% endif %}
                >Doutorado
            </option>
        </select>
    </div>    
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="classType" 
                value="P"
                {% if teacher.classType == 'P' %}
                    checked
                {% endif %} 
            >Presencial
        </span>
        <span>
            <input 
                type="radio" 
                name="classType" 
                value="D"
                {% if teacher.classType == 'D' %}
                    checked
                {% endif %}
            >À distância
        </span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input 
            type="text" 
            name="services"
            placeholder="Separe as áreas de atuações por vírgula"
            value="{{ teacher.services }}"
        >
    </div>
</div>

<button id="save-button" type="submit">Salvar</button>