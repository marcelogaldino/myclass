{% extends 'layout.njk' %}

    {% block content %}

        <div class="card">
            <section class="avatar"></section>
            
            <section class="details">
                <h3>Professor(a)</h3>

                <div class="item">
                    <div>Nome</div>
                    <div>{{ teacher.name }}</div>                
                </div>

                <div class="item">
                    <div>Idade</div>
                    <div>{{ teacher.birth }}</div>                
                </div>

                <div class="item">
                    <div>Grau de escolaridade</div>
                    <div>{{ teacher.degree }}</div>                
                </div>

                <div class="item">
                    <div>Tipo de aula</div>
                        <div>
                            <span>{{ "Presencial" if teacher.modality == "Presencial" else "Online" }}</span>
                        </div>
                </div>

                <div class="item">
                    <div>Acompanhamento</div>
                        <div>
                            {% for service in teacher.services %}
                                <span>{{ service }}</span>
                            {% endfor %}
                        </div>
                </div>

                <div class="item">
                    <div>Desde</div>
                    <div>{{ teacher.created_at }}</div>                
                </div>

                <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>
                
            </section>
        </div>

    {% endblock content %}