<div class="item">
    <div>Imagem</div>
    <div>
        <input 
            autofocus="autofocus" 
            type="text" 
            name="avatar_url" 
            placeholder="http://" 
            value="{{ teachers.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Nome completo" 
            value="{{ teachers.name }}"
            >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth"
            value="{{ teachers.birth }}"
            >
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select 
            name="degree"
            value="{{ teachers.degree }}"
        >
            <option value="Ensino Médio Completo">Ensino Médio Completo</option>
            <option value="Ensino Superior Completo">Ensino Superior Completo</option>
            <option value="Mestrado">Mestrado</option>
            <option value="Doutorado">Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="modality" 
                value="Presencial" 
                checked
                {% if teachers.modality == 'Presencial' %}
                    checked
                {% endif %}
            >
            Presencial
        </span>
        <span>
            <input 
            type="radio" 
            value="Online" 
            name="modality"
            {% if teachers.modality == 'Online' %}
                checked
            {% endif %}
        >
            Online
        </span>

    </div>
</div>

<div class="item">
    <div>Acompanhamento</div>
    <div>
        <input 
            type="text" 
            name="services" 
            placeholder="Separe por virgulas. Ex: Matematica, Algebra, ..."
            value="{{ teachers.services }}"
        >
    </div>
</div>

<button type="submit">Salvar</button>