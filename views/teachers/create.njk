{% extends 'layout.njk' %}

    {% block content %}

        <form class="card" method="POST" action="/teachers">
            <section class="avatar"></section>
            
            <section class="details">
                <h3>Novo Professor(a)</h3>

                <div class="item">
                    <div>Imagem</div>
                    <div>
                        <input
                            autofocus
                            type="text" 
                            name="avatar_url"
                            placeholder="http://"
                        >
                    </div>                
                </div>

                <div class="item">
                    <div>Nome</div>
                    <div>
                        <input 
                            type="text" 
                            name="name"
                            placeholder="Nome completo"
                        >
                    </div>                
                </div>

                <div class="item">
                    <div>Data de nascimento</div>
                    <div>
                        <input 
                            type="date" 
                            name="birth"
                        >
                    </div>                
                </div>

                <div class="item">
                    <div>Grau de escolaridade</div>
                    <div>
                        <select name="degree">
                            <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                            <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                            <option value="Mestrado">Mestrado</option>
                            <option value="Doutorado">Doutorado</option>
                        </select>
                    </div>              
                </div>

                <div class="item">
                    <div>Tipo de aula</div>
                        <div>
                            <span>
                                <input 
                                    type="radio" 
                                    name="modality"
                                    value="Presencial"
                                    checked
                                >   
                                Presencial 
                            </span>
                            <span>
                                <input 
                                    type="radio"
                                    value="Online"
                                    name="modality"
                                >   
                                Online
                            </span>

                        </div>
                </div>

                <div class="item">
                    <div>Acompanhamento</div>
                        <div>
                            <input 
                                type="text" 
                                name="services"
                                placeholder="Separe por virgulas. Ex: Matematica, Algebra, ..."    
                            >
                        </div>
                </div>
                
                <button type="submit">Salvar</button>

            </section>
        </form>

    {% endblock content %}