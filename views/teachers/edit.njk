{% extends 'layout.njk' %}

{% block content %}


    <div class="card">
        <section class="avatar"></section>

        <section class="details">


            <form method="POST" action="/teachers?_method=PUT">

                <h3>Editar Professor(a)</h3>

                {% include 'teachers/fields.njk' %}

                <input 
                    type="hidden" 
                    name="id" 
                    value="{{ teachers.id }}"
                >

            </form>
        
            
            <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
                <input type="hidden" name="id" value="{{ teachers.id }}">
                <button type="submit">Deletar</button>
            </form>

        </section>

            
    </div>

    

{% endblock content %}